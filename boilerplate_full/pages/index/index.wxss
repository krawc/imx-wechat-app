/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.slider {
  width: 100%;
  height: 40vh;
  margin: 0;
  position: relative;
  overflow: hidden;
  border-bottom: 5px solid #fff;
}

.slider swiper-item {
  border-bottom: 1px solid #fff;
  box-sizing: border-box;
}


.slider .slider-img {
  width: 100%;
  height: 40vh;
  margin: 0;
  object-fit: cover;
}

.tags {
  display: flex;
}

.tags .btn-tag {
  font-size: 14px;
  padding: 0.5em 1em;
  line-height: 20px;
  border-radius: 20px;
  background: #f5f5f5;
  border: 1px solid #ccc;
  box-shadow: none;
  outline: none;
  margin: 0.5em;
  text-transform: capitalize;
}

.tags .btn-tag.active {
  border: 1px solid #8900E1;
  color: #8900E1;
  background: #fff;
}

.news {
  padding: 1em 0.5em;
  box-sizing: border-box;
  width: 100%;
}

.news-single {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 0.5em;
  box-sizing: border-box;
  border-top: 1px solid #eee;
}

.news-single .news-single-contents {
  flex: 0 0 80%;
  display: flex;
  flex-direction: column;
}

.news-single .news-single-contents .news-single-title {
  width: 100%;
  margin-bottom: 0.5em;
}

.news-single .news-single-contents .news-single-text {
  color: #666;
  font-size: 12px;
}

.news-single:last-of-type {
  border-bottom: 1px solid #eee;
}

.news-single .photo {
  flex: 0 0 20%;
}

.news-single .photo image {
  width: 50px;
  height: 50px;
}

