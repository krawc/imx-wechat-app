
.equip-search {
  background: #eee;
  width: 100%;
  padding: 1em;
  box-sizing: border-box;
}

.equip-search input {
  border: 1px solid #ccc;
  background: #fff;
  line-height: 20px;
  border-radius: 20px;
  padding: 0.5em;
  font-size: 14px;
}


.equip {
  padding: 1em 0.5em;
  box-sizing: border-box;
  width: 100%;
}

.equip-single {
  display: flex;
  width: 100%;
  padding: 0.5em;
  box-sizing: border-box;
  border-top: 1px solid #eee;
}

.equip-single.missing {
  opacity: 0.5;
}

.equip-single:last-of-type {
  border-bottom: 1px solid #eee;
}

.equip-single .photo {
  flex: 0 0 20%;
}

.equip-single .photo image {
  width: 50px;
  height: 50px;
}

